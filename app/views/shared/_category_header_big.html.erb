<thead>
  <th class="cat_big" colspan="2"><%= link_to category.name, category_path(category) %></th>
  <th class="cat_big button-s right">
    <% if user_signed_in? %>
      <%= link_to new_recipe_path(category_id: category.id), title: 'Add recipe', id: ('add-recipe-' + category.id.to_s) do %><span class="glyphicon glyphicon-plus"></span><% end %>
    <% end %>
    <%= link_to category, method: :delete, data: { confirm: 'Are you sure?' } do %><span class="glyphicon glyphicon-remove"></span><% end %>
  </th>
</thead>
