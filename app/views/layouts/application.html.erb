<!DOCTYPE html>
<html>
<head>
  <title>The Recipe App</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/"><%= image_tag "icon.png", style: 'margin-right: 10px' %> Recipe<b>a</b>s<b>pp</b></a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to 'Start', root_path %></li>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Categories <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <% @categories_dd.each do |c| %>
              <li><%= link_to c.name, category_path(c) %></li>
            <% end %>
            <li role="separator" class="divider"></li>
            <li><%= link_to 'Add new category', new_category_path %></li>
          </ul>
        </li>

        <li class="<%= 'active' if params[:controller] == 'pages' && params[:action] == 'search' %>"><a href="/pages/search">Search</a></li>

        <li class="<%= 'active' if params[:controller] == 'pages' && params[:action] == 'weekplanner' %>"><a href="/pages/weekplanner">Week Planner</a></li>

        <li class="<%= 'active' if current_page?(pages_info_path) %>"><a href="/pages/info">About</a></li>

        <% if user_signed_in? %>
          <li><%= link_to 'Logout', destroy_user_session_path, method: 'delete' %></li>
        <% else %>
          <li><%= link_to 'Login', new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  <% if notice %><p class="alert alert-info"><%= notice %></p><% end %>
  <% if alert %><p class="alert alert-warning"><%= alert %></p><% end %>

  <%= yield %>
</div>

<footer>
  <div class="container footer">
    &copy; Vera Clemens 2016
  </div>
</footer>
<script src="//railsgirls.com/assets/bootstrap.js"></script>

</body>
</html>
